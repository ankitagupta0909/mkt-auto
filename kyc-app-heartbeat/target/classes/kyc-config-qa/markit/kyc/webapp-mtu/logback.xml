<?xml version="1.0" encoding="UTF-8"?>
<included>

	<include resource="markit/kyc/common/logback-console.xml"/>
	<include resource="markit/kyc/common/logback-instrumentation.xml"/>
	<include resource="markit/kyc/common/logback-web.xml"/>

	<!-- Application Loggers -->
	<logger name="com.markit" level="DEBUG" />

	<!-- 3rdparty Loggers -->
	<logger name="org.springframework" level="ERROR" />
	
	<!-- 3rdparty Loggers -->
	<logger name="com.marketxs.userxs" level="ERROR" />
	
	<logger name="com.markit.kyc.commons.repository" level="ERROR" />
	
	<logger name="org.thymeleaf" level="WARN" />
	
	<!-- Root Logger -->
	<root level="DEBUG">
		<!-- CONSOLE appender should only be used on developers' machines -->
		<!-- <appender-ref ref="CONSOLE" /> -->
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="SERVER_LOG_FILE" />
	</root>

</included>