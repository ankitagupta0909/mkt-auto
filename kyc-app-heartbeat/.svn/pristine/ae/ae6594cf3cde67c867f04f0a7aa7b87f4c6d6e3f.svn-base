<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.markit.kyc</groupId>
		<artifactId>kyc-config</artifactId>
		<version>1.3.2.2-SNAPSHOT</version>
	</parent>

	<artifactId>kyc-config-qa</artifactId>

	<packaging>jar</packaging>
	<name>KYC QA Configuration</name>
	<description>Provides configuration for qa environment</description>
	
	<properties>
		<maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
		<timestamp>${maven.build.timestamp}</timestamp>
	</properties>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/common/application.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>**/common/application.properties</exclude>
				</excludes>
			</resource>
		</resources>
	</build>

	<profiles>
		<profile>
			<id>rpm-build</id>
			<build>
				<finalName>${project.artifactId}</finalName>
				<plugins>
					<!-- RPM Related stuff -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>rpm-maven-plugin</artifactId>
						<version>2.1-alpha-1</version>
						<extensions>true</extensions>

						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>attached-rpm</goal>
								</goals>
							</execution>
						</executions>

						<configuration>
							<copyright>2014 - Markit</copyright>
							<name>${project.build.finalName}</name>
							<group>Application/Markit/KYC</group>
							<vendor>KYC</vendor>
							<url>http://www.kyc.com/</url>
							<summary>KYC QA Configuration</summary>							
							<changelogFile>${project.basedir}/src/main/resources/changelog</changelogFile>
							<description>
							</description>
							<mappings>
								<mapping>
									<directory>/etc/kyc-config</directory>
									<username>root</username>
									<groupname>root</groupname>
									<directoryIncluded>true</directoryIncluded>
									<recurseDirectories>true</recurseDirectories>
									<sources>
										<source>
											<location>target/classes/</location>
										</source>
									</sources>
								</mapping>
							</mappings>
<!-- 							<keyname>KYC Development &lt;MK-CentralizedOnboardingDevelopment@markit.com&gt;</keyname> -->
<!-- 							<keyPassphrase> -->
<!-- 								<passphrase>9tjxjMT4y</passphrase> -->
<!-- 							</keyPassphrase> -->
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
